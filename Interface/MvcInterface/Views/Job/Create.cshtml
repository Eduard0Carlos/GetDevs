                <select class="form-control resume-input cmb" style="color: #a6a7aa" name="DegreesRequired" id="degree">
                    <option value="empty" disabled selected hidden>Formação</option>
                    <option value="Ensino_Fundamental">Ensino Fundamental</option>
                    <option value="Ensino_Médio">Ensino Médio</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
                <button onclick="postData()" class="btn-theme btn-theme-sm btn-base-bg text-uppercase form-button">Criar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
    $(document).ready(function() {
        $('#skills').select2({
        placeholder: "Conhecimentos"
            });
        $('#idioms').select2({
        placeholder: "Idiomas"
            });
    });
</script>
    }