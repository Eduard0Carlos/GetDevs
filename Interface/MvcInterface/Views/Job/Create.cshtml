@{
    Layout = $"~/Views/Shared/_LayoutFooterHidden.cshtml";
    ViewData["Title"] = "Perfil";
}

<form method="post" style="width: 100%">
    <div class="grid-resume shadow" style="padding-bottom: 125px !important; padding-top: 125px !important;">
        <div class="content-lg container resume-item">
            <div class="margin-b-40" style="width: 60%; margin-left: auto; margin-right: auto">
                <h1 class="resume-category">INFORMAÇÕES</h1>
                <input type="text" class="form-control resume-input" name="Title" placeholder="Título" required />
                <input type="text" class="form-control resume-input" name="Description" placeholder="Descrição" required />
                <div style="display: flex;">
                    <input type="text" class="form-control resume-input" name="AvaibleVacancy" placeholder="Vagas Disponíveis" required />
                    <input type="text" onfocus="(this.type='date')" class="form-control resume-date half-2" name="ExpiredDate" placeholder="Data Limite" required />
                </div>
            </div>
        </div>

        <div class="content-lg container resume-item">
            <div class="margin-b-40" style="width: 60%; margin-left: auto; margin-right: auto">
                <h1 class="resume-category">REQUISITOS</h1>
                <select class="form-control resume-input cmb" style="color: #a6a7aa" name="SkillRequired" id="skills" multiple>
                    <option value="None">None</option>
                    <option value="CSharp">CSharp</option>
                    <option value="Java">C</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="Ruby">Ruby</option>
                    <option value="Phyton">Phyton</option>
                    <option value="Cobol">Cobol</option>
                    <option value="PHP">PHP</option>
                    <option value="Algol">Algol</option>
                    <option value="CPlusPlus">CPlusPlus</option>
                    <option value="C">C</option>
                    <option value="VB">VB</option>
                    <option value="Delphi">Delphi</option>
                    <option value="Pascal">Pascal</option>
                    <option value="MathLab">MathLab</option>
                    <option value="Genexus">Genexus</option>
                    <option value="HTML">HTML</option>
                    <option value="Flutter">Flutter</option>
                    <option value="SmallTalk">SmallTalk</option>
                    <option value="Basic">Basic</option>
                    <option value="Fortran">Fortran</option>
                    <option value="Swift">Swift</option>
                    <option value="ADONet">ADONet</option>
                    <option value="EF">EF</option>
                    <option value="DDD">DDD</option>
                    <option value="MicroService">MicroService</option>
                    <option value="TDD">TDD</option>
                    <option value="Subsonic">Subsonic</option>
                    <option value="NHibernate">NHibernate</option>
                    <option value="Hibernate">Hibernate</option>
                    <option value="Docker">Docker</option>
                    <option value="Kubernets">Kubernets</option>
                    <option value="Angular">Angular</option>
                    <option value="React">React</option>
                    <option value="VUEJS">VUEJS</option>
                </select>

                <select class="form-control resume-input cmb" style="color: #a6a7aa" name="LanguagesRequired" id="idioms" multiple="multiple">
                    <option value="Inglês">Inglês</option>
                    <option value="Português">Português</option>
                    <option value="Espanhol">Espanhol</option>
                    <option value="Francês">Francês</option>
                    <option value="Africâner">Africâner</option>
                    <option value="Albanês">Albanês</option>
                    <option value="Alemão">Alemão</option>
                    <option value="Amárico">Amárico</option>
                    <option value="Árabe">Árabe</option>
                    <option value="Armênio">Armênio</option>
                    <option value="Azerbaijano">Azerbaijano</option>
                    <option value="Basco">Basco</option>
                    <option value="Bengali">Bengali</option>
                    <option value="Bielorrusso">Bielorrusso</option>
                    <option value="Birmanês">Birmanês</option>
                    <option value="Bósnio">Bósnio</option>
